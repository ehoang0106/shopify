{% form 'cart', cart %}
  <h1>Cart</h1>
  {% if cart.empty? %}
    <p>Your cart is empty</p>
  {% else %}
    {% for item in cart.items %}
      <div>
        <img src="{{ item.image |  image_url: width: 200  }}" alt="" width="200" height="auto">
        <h2>{{ item.product.name }}</h2>
        <p>Price: {{ item.final_line_price | money_with_currency }}</p>
        <p>Quantiy: {{ item.quantity }}</p>

        <input name="updates[]" value="{{ item.quantity }}">
        <a href="{{ item.url_to_remove }}">Remove</a>
      </div>
    {% endfor %}

    <hr>
    <p>Total: {{ cart.total_price | money_with_currency }}</p>
    <button type="submit" name="update">Update</button>
    <button type="submit" name="checkout">Checkout</button>
  {% endif %}
{% endform %}
