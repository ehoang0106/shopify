
<img src="{{ product.featured_image | image_url }}" width="300px" height="auto" alt="">
<h3>{{product.title}}</h3>
<p>{{ product.price |  money_with_currency }}</p>
<div>
    {{ product.description}}
</div>

{% form 'product', product %}
    <select name="id">
        {% for variant in product.variants %}
            <option value="{{variant.id}}">
                {{ variant.title }}
            </option>
        {% endfor %}
    </select>

    <button type="submit">Add to Cart</button>

{% endform %}